#!/usr/bin/env python

'''
Read value from the specified section in an inifile

Usage:
  read-data INI-FILE SECTION NAME

Options:
  -h --help     Show this screen.
  --version     Show version.

'''

from docopt import docopt
import ConfigParser
import os


def main(inifile, section, variable_name):

    # config parse returns the wrong error if
    # the file does not exist, so cause an error
    # by trying to read a nonexistent file first.
   open (inifile)

    cf = ConfigParser.ConfigParser()
    cf.read(inifile)
    files = cf.get(section, variable_name)

    print files


if __name__ == '__main__':

    args = docopt(__doc__, version='0.1')
    main(args['INI-FILE'], args['SECTION'], args['NAME'])
